<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard1.0</TargetFramework>
        <Nullable>enable</Nullable>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageVersion>0.1.2</PackageVersion>
        <Authors>modo.lv</Authors>
        <PackageProjectUrl>https://github.com/modo-lv/Simpler.NetCore</PackageProjectUrl>
        <RepositoryUrl>https://github.com/modo-lv/Simpler.NetCore/tree/v0.1.2</RepositoryUrl>
        <RepositoryType>GitHub</RepositoryType>
        <LangVersion>default</LangVersion>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
      <DocumentationFile>bin\Release\Simpler.NetCore.xml</DocumentationFile>
    </PropertyGroup>

</Project>
